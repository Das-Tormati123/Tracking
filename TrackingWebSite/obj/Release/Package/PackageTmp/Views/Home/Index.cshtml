@model TrackingWebSite.Models.ViewLogin

@{
    Layout = "~/views/shared/_Layout_Login.cshtml";
}
@using (Html.BeginForm("CheckLogin", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken();
    <!-- Email input -->
    <div class="form-outline m-b-sm" style="margin-top:260.675px;">
        @Html.TextBoxFor(m => m.Username, new { @class = "form-control", @placeholder = "UserName" })
    </div>

    <!-- Password input -->
    <div class="form-outline m-b-sm">
        @Html.PasswordFor(m => m.Password, new { @class = "form-control", autocomplete = "off", @placeholder = "Password" })
    </div>
    <!-- Submit button -->
    <div class="form-outline">
        <button class="btn btn-success btn-lg w-100 mt-4 m-b-sm btn-color form-control" type="submit">Login</button>
    </div>
}
